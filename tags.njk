---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---
<h1>Tagged “{{ tag }}”</h1>

<section class="p1">
  {% set postslist = collections[ tag ] %}
  {% include "postslist.njk" %}

  <p>
    See <a href="{{ '/tags/' | url }}">all tags</a>,
    or go <a href="{{ '/' | url }}">back to home</a>.
  </p>
</section>
